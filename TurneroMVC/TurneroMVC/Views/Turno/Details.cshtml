@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor

@model TurneroMVC.Models.Turno

@{
    Layout = "_Layout";
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Turno</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiaHora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiaHora)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actividad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actividad)
        </dd>
        @if (Accessor.HttpContext.Session.GetString("Rol").Equals(Rol.ADMINISTRADOR.ToString()))
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Cuenta.NombreCompleto)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Cuenta.NombreCompleto)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>
