@model IEnumerable<TurneroMVC.Models.Cuenta>

@{
    Layout = "~/Views/Shared/_NavBar.cshtml";
    ViewData["Title"] = "Index";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TurneroMVC</title>
    <link rel="stylesheet" href="~/css/cuentaIndex.css">
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
</head>
<body>
    <h1>Cuentas</h1>

    <div class="contenedor_tabla">
        <table class="table">

            <thead>
                <tr>
                    <th class="info">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th class="info">
                        @Html.DisplayNameFor(model => model.NombreCompleto)
                    </th>
                    <th class="info">
                        @Html.DisplayNameFor(model => model.Edad)
                    </th>
                    <th class="info">
                        @Html.DisplayNameFor(model => model.Dni)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="mail">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="info_txt">
                            @Html.DisplayFor(modelItem => item.NombreCompleto)
                        </td>
                        <td class="info_txt">
                            @Html.DisplayFor(modelItem => item.Edad)
                        </td>
                        <td class="info_txt">
                            @Html.DisplayFor(modelItem => item.Dni)
                        </td>
                        <td>
                            <a class="opciones" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                            <a class="opciones" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                            <a class="opciones" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
